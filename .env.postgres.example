# ============================================================================
# CONFIGURAÇÃO DO WMS - POSTGRESQL
# ============================================================================

# Servidor API
SERVICE_NAME=wms-core-api
API_PORT=8000
LOG_LEVEL=info

# PostgreSQL (OBRIGATÓRIO quando USE_POSTGRES=true)
USE_POSTGRES=true
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wms_db
DB_USER=wms_user
DB_PASSWORD=sua_senha_aqui

# SAP Business One
SAP_B1_BASE_URL=https://REDACTED_SAP_HOST:50000
SAP_B1_COMPANY_DB=REDACTED_COMPANY_DB
SAP_B1_USERNAME=REDACTED_USER
SAP_B1_PASSWORD=REDACTED_PASSWORD
SAP_B1_TOKEN=REDACTED_TOKEN
SAP_B1_TIMEOUT_MS=20000
SAP_B1_MAX_ATTEMPTS=5
SAP_B1_MAX_CONCURRENT=8
SAP_B1_MAX_RPS=10

# Segurança
INTERNAL_SHARED_SECRET=change_me_in_production

# Observabilidade
OTEL_SERVICE_NAME=wms-api
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true
