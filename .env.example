# ============================================================================
# SAP B1 Mock Configuration
# ============================================================================

# Usar mock service em vez de SAP real?
# true = mock (desenvolvimento/testes)
# false = SAP real (produção)
USE_SAP_MOCK=true

# Delay simulado do mock (em milissegundos)
# 0 = sem delay (testes rápidos)
# 300-500 = realista (desenvolvimento)
SAP_MOCK_DELAY=500

# ============================================================================
# SAP B1 Real Connection (apenas se USE_SAP_MOCK=false)
# ============================================================================

# SAP Service Layer
SAP_HOST=localhost
SAP_PORT=50000
SAP_COMPANY_DB=SBODEMO

# Credenciais
SAP_USERNAME=manager
SAP_PASSWORD=

# ============================================================================
# Environment
# ============================================================================

# Ambiente de execução
# test = sempre usa mock
# development = usa configuração USE_SAP_MOCK
# production = preferencialmente SAP real
NODE_ENV=development

# ============================================================================
# WMS Core API
# ============================================================================

# Porta da API
PORT=3000

# Base URL
API_BASE_URL=http://localhost:3000

# ============================================================================
# Database (se aplicável)
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/wms

# ============================================================================
# Logs
# ============================================================================

# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# ============================================================================
# Outros
# ============================================================================

# Secret para JWT (se usar autenticação)
JWT_SECRET=your-secret-key-here
