{
  "name": "wms-orchestrator-artifacts",
  "version": "0.1.0",
  "private": true,
  "description": "Artefatos e base de integração SAP B1 para o WMS Orchestrator.",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.json",
    "lint": "echo \"(sem lint por enquanto)\"",
    "test": "tsx --test \"wms-core/tests/**/*.test.ts\" \"tests/**/*.test.ts\"",
    "test:coverage": "c8 --reporter=text --reporter=html --reporter=lcov tsx --test \"wms-core/tests/**/*.test.ts\" \"tests/**/*.test.ts\"",
    "otel:check": "node -e \"console.log('OTEL_SERVICE_NAME=', process.env.OTEL_SERVICE_NAME || '(unset)'); console.log('OTEL_EXPORTER_OTLP_ENDPOINT=', process.env.OTEL_EXPORTER_OTLP_ENDPOINT || '(unset)')\"",
    "sap:build": "tsc -p sap-connector/tsconfig.json",
    "sap:test": "npm run sap:build && node dist/sap-connector/examples/test-connection.js",
    "sap:example": "npm run sap:build && node dist/sap-connector/examples/basic-usage.js",
    "sap:conferencia": "npm run sap:build && node dist/sap-connector/examples/conferencia-pedidos.js",
    "sap:conferencia-simples": "npm run sap:build && node dist/sap-connector/examples/conferencia-simples.js",
    "sap:mapear-campos": "npm run sap:build && node dist/sap-connector/examples/mapear-campos-orders.js",
    "sap:investigar-endpoints": "npm run sap:build && node dist/sap-connector/examples/investigar-endpoints.js",
    "sap:testar-sqlqueries": "npm run sap:build && node dist/sap-connector/examples/testar-sqlqueries.js",
    "sap:mock": "tsx sap-connector/examples/test-mock-service.ts",
    "sap:mock:integration": "tsx sap-connector/examples/integration-example.ts",
    "sap:factory": "tsx sap-connector/examples/use-factory.ts",
    "test:sap:integration": "tsx --test sap-connector/tests/integration.test.ts",
    "sap:validate-setup": "tsx sap-connector/tests/validate-sap-setup.ts",
    "sap:check-udfs": "tsx sap-connector/scripts/check-existing-udfs.ts",
    "sap:check-udfs-all": "tsx sap-connector/scripts/check-udfs-all-tables.ts",
    "sap:test-udf-write": "tsx sap-connector/scripts/test-udf-write.ts",
    "dev:core": "tsx api/server.ts",
    "dev:core:postgres": "USE_POSTGRES=true tsx api/server-postgres.ts",
    "start": "tsx api/server-postgres.ts",
    "db:migrate": "echo 'Run: psql -U wms_user -d wms_db -f wms-core/migrations/0003_orders_extended_fields.sql'",
    "dev:gateway": "cd gateway && npm run dev",
    "dev:worker": "cd worker && npm run dev",
    "dev:web": "cd web && npm run dev"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.206.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@types/jsonwebtoken": "^9.0.10",
    "dotenv": "^17.2.4",
    "fastify": "^5.3.2",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.14.1",
    "pino": "^9.9.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.11",
    "@types/uuid": "^10.0.0",
    "c8": "^10.1.3",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.20.2",
    "typescript": "^5.8.2"
  }
}
